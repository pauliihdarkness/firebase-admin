<div class="profile-container">
    <div class="profile-card">
        <div class="profile-header">
            <div class="profile-avatar">
                <img id="user-avatar" src="https://ui-avatars.com/api/?name=Usuario&background=4285f4&color=fff&size=120" alt="Avatar" onerror="this.src='https://ui-avatars.com/api/?name=Usuario&background=4285f4&color=fff&size=120'">
            </div>
            <h1 id="profile-name">Cargando...</h1>
            <p id="profile-email" class="profile-email">Cargando...</p>
        </div>
        
        <form id="profile-form" class="profile-form">
            <div class="form-group">
                <label for="profile-display-name">Nombre</label>
                <input type="text" id="profile-display-name" name="displayName" required>
            </div>
            
            <div class="form-group">
                <label for="profile-phone">Teléfono</label>
                <input type="tel" id="profile-phone" name="phoneNumber">
            </div>
            
            <div class="form-group">
                <label>Fecha de Registro</label>
                <input type="text" id="profile-created" readonly>
            </div>
            
            <div class="form-group">
                <label>Último Acceso</label>
                <input type="text" id="profile-last-login" readonly>
            </div>
            
            <div class="form-group">
                <label>Rol</label>
                <input type="text" id="profile-role" readonly>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <button type="button" id="delete-account-btn" class="btn btn-danger">Eliminar Cuenta</button>
            </div>
        </form>
        
        <div id="error-message" class="alert alert-error" style="display: none;"></div>
        <div id="success-message" class="alert alert-success" style="display: none;"></div>
    </div>
</div>

